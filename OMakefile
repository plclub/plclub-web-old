# Name of the destination directory
LIVE = dest

# Name of the source directory
SRC = src

RSYNC=rsync -rulzvtS -e ssh 
#RSYNC=rsync -rulzvtS --delete -e ssh 

SMRTCP=rsync 

# All proper subdirectories of the current one
SRCDIRS = $(subdirs CP, $(SRC)) $(SRC)
SPECIALDIRS = $(SRC)/papers
DIRS=$(SRCDIRS) $(SPECIALDIRS)
$(LIVE): 
	if $(file-exists $@)
	  # NOP
	else
	 -mkdir $@

.PHONY: build clean commit update live

update:
	svn update
 
build: $(DIRS) 

clean:
	$(RM) -r $(LIVE)

commit:
	svn commit

live: 
	$(RSYNC) ./$(LIVE)/ "plclub@eniac-l.seas.upenn.edu:html/"

.SUBDIRS: $(SRC)/papers
  DIR = $(in $(ROOT)/$(SRC), $(CWD))
  
  build:
    make  
    -mkdir -p $(ROOT)/$(LIVE)/$(DIR)
    $(SMRTCP) $(glob *.html *.shtml) $(ROOT)/$(LIVE)/$(DIR)/
    
  clean:
    make clean

# Copy the files into the right place
.SUBDIRS: $(set-diff $(SRCDIRS), $(SPECIALDIRS))
  # Get the directory name relative to the project root
  DIR = $(in $(ROOT)/$(SRC), $(CWD))

  # Copy the files into the right place
  build:    
    -mkdir -p $(ROOT)/$(LIVE)/$(DIR)
    $(SMRTCP) $(set-diff $(glob * .*) $(glob .*), $(glob D,* .*)) $(ROOT)/$(LIVE)/$(DIR)/ 
  clean:

